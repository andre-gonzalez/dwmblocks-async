#!/bin/sh

# Dependencies: ip

dwm_vpn() {
    # Check if tun0 exists and has an IP
    if ip addr show tun0 >/dev/null 2>&1; then
        IP=$(ip -4 addr show tun0 | awk '/inet / {print $2}' | cut -d/ -f1)
        if [ -n "$IP" ]; then
            printf "ðŸ”’ %s" "$IP"
        fi
    fi
}

dwm_vpn
